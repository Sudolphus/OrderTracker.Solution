@using OrderTracker.Models;
@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>Orders By Vendor</h1>
</div>

<div class="row">
  <div class="col-md-3">
    @Html.Partial("_Sidebar")
  </div>
  <div class="col-md-9">
    @if (@Model.Count == 0)
    {
      <p>No Vendors Added</p>
    }
    else
    {
      @foreach(Vendor vendor in Model)
      {
        <h3>@vendor.Name</h3>
        <ul>
          @if (@vendor.GetOrders().Count == 0)
          {
            <li>No Orders Recorded For This Vendor</li>
          }
          else
          {
            @foreach(Order order in @vendor.GetOrders())
            {
              <li>Bread: @order.BreadOrder, Pastry: @order.PastryOrder</li>
            }
          }
        </ul>
      }
    }
  </div>
</div>