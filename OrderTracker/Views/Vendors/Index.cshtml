@using OrderTracker.Models;

@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>Vendor List</h1>
</div>

<div class="row">
  <div class="col-md-3">
    @Html.Partial("_Sidebar")
  </div>
  <div class="col-md-9">
    @if (@Model.Count == 0)
    {
      <p>You haven't added any vendors.</p>
      <a href="/vendors/new">To add vendors start here</a>
    }
    else
    {
      <div class="vendors-list">
        <ul>
          @foreach(Vendor vendor in Model)
          {
            <div class="card">
              <div class="card-body">
                <li><a href="/vendors/@vendor.ID">@vendor.Name</a></li>
              </div>
            </div>
          }
        </ul>
      </div>
    }
  </div>
</div>