@using OrderTracker.Models;

@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>Vendor List</h1>
</div>
@if (@Model.Count == 0)
{
  <p>You haven't added any vendors.</p>
}
else
{
  <div class="vendors-list">
    <ul>
      @foreach(Vendor vendor in Model)
      {
        <li>@Model.Name</li>
      }
    </ul>
  </div>
}