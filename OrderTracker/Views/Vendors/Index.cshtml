@using OrderTracker.Models;

@{
  Layout = "_Layout";
}

<div class="page-header">
  <h1>Vendor List</h1>
</div>

<div class="row">
  <div class="col-md-3">
    @Html.Partial("_Sidebar")
  </div>
  <div class="col-md-9">
    @if (@Model.Count == 0)
    {
      <p>You haven't added any vendors.</p>
    }
    else
    {
      <div class="vendors-list">
        <ul>
          @foreach(Vendor vendor in Model)
          {
            <li><a href="/vendors/@Model.ID">@vendor.Name</a></li>
          }
        </ul>
      </div>
    }
    <a href="/vendors/new">Add New Vendor</a>
  </div>
</div>